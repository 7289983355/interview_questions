package string;

import java.util.HashMap;
import java.util.Map;

public class UniqueCharTest {

	public static void main(String[] args) {
		// 3. First Unique Character
		String uniqueCharTest = "leetcode";
		System.out.println("First Unique Char Index: " + firstUniqChar(uniqueCharTest)); // Output: 0

	}

	private static String firstUniqChar(String uniqueCharTest) {
		
		//prepare a frequency map
		Map<Character ,Integer> frequencyMap= new HashMap<>();
		
		for(char c:uniqueCharTest.toCharArray()) {
			
			frequencyMap.put(c, frequencyMap.getOrDefault(c, 0)+1);
		}
		return null;
	}

}
